{
  "name": "universal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "app:client:dev": "cross-env WEBPACK_ENV=development WEBPACK_TARGET=web nodemon -w config --exec \"webpack-dev-server --config config/webpack.config.babel.js\"",
    "app:server:dev": "cross-env WEBPACK_ENV=development WEBPACK_TARGET=node nodemon -w config --exec \"webpack --config config/webpack.config.babel.js\"",
    "app:dev": "run-p app:client:dev app:server:dev",
    "server:dev": "cross-env NODE_ENV=development nodemon -w server --exec \"babel-node server\"",
    "dev": "run-p server:dev app:dev",
    "app:client:build": "cross-env WEBPACK_TARGET=web webpack --config config/webpack.config.babel.js\"",
    "app:server:build": "cross-env WEBPACK_TARGET=node webpack --config config/webpack.config.babel.js\"",
    "app:build": "run-p app:client:build app:server:build",
    "server:build": "babel server -s -D -d dist",
    "build": "run-p app:build server:build",
    "server:start": "cross-env NODE_ENV=production node dist",
    "start": "cross-env WEBPACK_ENV=production run-s build server:start"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "connect-gzip-static": "^2.0.1",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "jsonwebtoken": "^7.4.1",
    "mock-rest-middleware": "^2.3.0",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1"
  },
  "devDependencies": {
    "eslint": "^4.0.0",
    "eslint-config-peerigon": "^11.3.1",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.5.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "nodemon": "^1.11.0"
  }
}
